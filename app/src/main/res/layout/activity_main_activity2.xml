<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.myapplication.MainActivity2Activity"
    android:background="#ff5ec9ff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Choose a Player:"
                        android:id="@+id/textViewChoosePlayer"
                        android:textSize="25dp"
                        android:layout_gravity="center_horizontal" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="147dp"
                        android:id="@+id/scrollPlayers"
                        android:layout_weight="0.41"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 1"
                                android:id="@+id/Player1"
                                android:layout_gravity="center_horizontal" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 2"
                                android:id="@+id/Player2" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 3"
                                android:id="@+id/Player3" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 4"
                                android:id="@+id/Player4" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 5"
                                android:id="@+id/Player5" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 6"
                                android:id="@+id/Player6" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player7"
                                android:id="@+id/Player7" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 8"
                                android:id="@+id/Player8" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 9"
                                android:id="@+id/Player9" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 10"
                                android:id="@+id/Player10" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 11"
                                android:id="@+id/Player11" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 12"
                                android:id="@+id/Player12" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 13"
                                android:id="@+id/Player13" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 14"
                                android:id="@+id/Player14" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 15"
                                android:id="@+id/Player15" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 16"
                                android:id="@+id/Player16" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 17"
                                android:id="@+id/Player17" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 18"
                                android:id="@+id/Player18" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 19"
                                android:id="@+id/Player19" />

                            <Button
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player 20"
                                android:id="@+id/Player20" />
                        </LinearLayout>
                    </ScrollView>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="200dp">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="+ Add To Team"
                            android:id="@+id/AddToTeam"
                            android:layout_gravity="center_horizontal"
                            android:textSize="30dp"
                            android:background="#ff72ff5c" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="- Remove from Team"
                            android:id="@+id/RemoveFromTeam"
                            android:layout_gravity="center_horizontal"
                            android:textSize="30dp"
                            android:background="#ffff6961" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Go Back"
                            android:id="@+id/GoBack"
                            android:layout_alignRight="@+id/what_ya_send"
                            android:layout_alignEnd="@+id/what_ya_send"
                            android:textSize="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="341dp"
                        android:layout_height="341dp"
                        android:id="@+id/imageView"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/emptyprofile" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name:"
                            android:id="@+id/textName"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Position:"
                            android:id="@+id/textPosition"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team:"
                            android:id="@+id/textTeam"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uniform:"
                            android:id="@+id/textUniform"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height:"
                            android:id="@+id/textHeight"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight:"
                            android:id="@+id/textWeight"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goals"
                            android:id="@+id/textGoals"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:textSize="25dp"
                            android:textColor="#ff000000" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
